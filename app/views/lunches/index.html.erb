<table class="table">
	<a href="/lunches/new">Add New</a>

	<tr>
		<th>Lunch</th>
		<th>Owner</th>
		<th>Repeatable</th>
		<th>Spiciness</th>
		<th> </th>
		<th> </th>
	</tr>
	<% if @lunches %>
		<% @lunches.each do |lunch| %>
			<tr>
				<td>
					<a href="<%= lunch_path(lunch) %>"><%= lunch.meal_name %></a>
				</td>
				<td><%= lunch.owner %></td>
				<td><%= lunch.repeatable %></td>
				<td><%= lunch.spiciness %></td>
				<td><a href="lunches/<%= lunch.id %>/edit">Edit</a></td>
				<td><a href="lunches/<%= lunch.id %>/delete">Delete</a></td>
			</tr>
		<% end %>
	<% end %>
</table>
